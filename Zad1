import java.util.Scanner;
import java.util.Arrays;
public class zad3 {

	public static void main(String[] args) {
		Scanner new = new Scanner(System.in);
		
		System.out.println("Zadanie 2\nPodaj liczbe ocen: ");
		int ilosc = new.nextInt();
		double sm = 0;
		double sr;
		double[] tablica = new double[ilosc];
		
		for(int i = 0; i < ilosc; i++) {
			System.out.println("Podaj wartosc pod index " + i);
			tablica[i] = new.nextDouble();}
		
		System.out.println("Podane oceny: \n");
		for(int i = 0 ; i < ilosc; i++) {
			sm = sm + tablica[i];
			sr = sm / i;
			System.out.println(tablica[i] + "   obecna suma: " + sm + "  obecna srednia: " + sr);
			
		}
		double suma = Arrays.stream(tablica).sum();
		double srednia = suma / ilosc;

		System.out.println("\nSrednia z podanych ocen: " + srednia);	
	}
}
